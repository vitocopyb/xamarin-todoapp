<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDo.App.Views.AddPage"
             Title="Agregar Tarea">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="BtnGuardar" Text="Guardar" Clicked="BtnGuardar_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="Nombre" FontSize="Medium" TextColor="{StaticResource colorPrimary}" />
            <Entry x:Name="nombre" />
            <Label Text="Descripción" FontSize="Medium" TextColor="{StaticResource colorPrimary}" />
            <Editor x:Name="descripcion" HeightRequest="200"></Editor>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>